<form action="/admin/service-complaint/update/{{payload._id}}?_method=PUT" method="post">
    <div class="form-group">
        <label for="street">Street</label>
        <input  name="street" type="text" class="form-control" id="street" placeholder="Enter street address"  value="{{payload.street}}" >
    </div>
    <div class="form-group">
        <label for="lga">Local Government</label>
        <input  name="lga" type="text" class="form-control" id="lga" placeholder="Enter local government"  value="{{payload.lga}}" >
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input  name="state" type="text" class="form-control" id="state" placeholder="Enter state"  value="{{payload.state}}" >
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input  name="name" type="text" class="form-control" id="name" placeholder="Enter Name"  value="{{payload.name}}" >
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input  name="phone" type="number" class="form-control" id="phone" placeholder="Enter Phone number"  value="{{payload.phone}}" >
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input  name="date" type="date" class="form-control" id="date" placeholder="Enter date"  value="{{payload.date}}" >
    </div>
    <div class="form-group">
        <label for="time">Time</label>
        <input  name="time" type="time" class="form-control" id="time" placeholder="Enter date"  value="{{payload.time}}" >
    </div>
    <div class="form-group">
        <label for="service_description">Service Description</label>
        <input  name="service_description" type="text" class="form-control" id="service_description" placeholder="Enter Service Description"  value="{{payload.service_description}}" >
    </div>
    <div class="form-group">
        <label for="complaint_narration">Complaint Narration </label>
        <textarea  name="complaint_narration" cols="30" rows="10" class="form-control" id="complaint_narration" placeholder="Enter Complaint Narration"> {{payload.complaint_narration}} </textarea>
    </div>
     <div class="form-group">
        <label for="provider_name">Provider Name</label>
        <input  name="provider_name" type="text" class="form-control" id="provider_name" placeholder="Enter Provider Name"  value="{{payload.provider_name}}" >
    </div>
     <div class="form-group">
        <label for="agreement_detail">Provider Name</label>
        <input  name="agreement_detail" type="text" class="form-control" id="agreement_detail" placeholder="Enter Agreement detail"  value="{{payload.agreement_detail}}" >
    </div>
     <div class="form-group">
        <label for="complaint_evidence">Complaint Evidence</label>
        <input  name="complaint_evidence" type="text" class="form-control" id="complaint_evidence" placeholder="Enter Complaint Evidence"  value="{{payload.complaint_evidence}}" >
    </div>
     <div class="form-group">
        <label for="service_feedback">Service Feedback</label>
        <input  name="service_feedback" type="text" class="form-control" id="service_feedback" placeholder="Enter service feedback"  value="{{payload.service_feedback}}" >
    </div>
     
    <div class="form-group">
        <label for="status">Status</label>
        
        <select name="status" id="status" class="form-control">
            {{#select payload.attended}}
             <option value="attended">Attended</option>
            <option value="pending">Unattended</option>
            
            {{/select}}
        </select>
        </div>
   
      <div class="form-check">
        <label for="anonymous" class="form-check-label">
        <input name="anonymous" type="checkbox" {{#if payload.anonymous}} checked="checked"{{/if}} class="form-check-input" id="anonymous">
            Anonymous User
        </label>
    </div>

