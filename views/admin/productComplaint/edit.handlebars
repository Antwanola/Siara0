    </div>
    <div class="form-group">
        <label for="time">Time</label>
        <input  name="time" type="time" class="form-control" id="time" placeholder="Enter date"  value="{{payload.time}}" >
    </div>
    <div class="form-group">
        <label for="product_type">Product Type</label>
        <input  name="product_type" type="text" class="form-control" id="product_type" placeholder="Enter Product Type"  value="{{payload.product_type}}" >
    </div>
    <div class="form-group">
        <label for="product_brand">Product Brand</label>
        <input  name="product_brand" type="text" class="form-control" id="product_brand" placeholder="Enter Product Brand"  value="{{payload.product_brand}}" >
    </div>
    <div class="form-group">
        <label for="batch_number">Batch Number</label>
        <input  name="batch_number" type="text" class="form-control" id="batch_number" placeholder="Enter Batch Number"  value="{{payload.batch_number}}" >
